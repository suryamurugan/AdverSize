<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ads.in.adversize.adversize.LiveTwoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pattern"
            />

        <ImageButton
            android:id="@+id/mediaImg"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-140dp"

            android:elevation="5dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user" />


        <android.support.v7.widget.CardView
            android:layout_margin="5dp"
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_below="@+id/header_cover_image"

            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:elevation="4dp"
                android:paddingBottom="10dp">


                <ImageView
                    android:id="@+id/add_friend"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_toLeftOf="@+id/drop_down_option_menu"
                    android:src="@drawable/ic_add_image" />

                <ImageView
                    android:id="@+id/drop_down_option_menu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_user_profile" />



                <LinearLayout
                    android:layout_below="@+id/drop_down_option_menu"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableLayout
                        android:paddingTop="60dp"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow
                            android:gravity="center"
                            android:layout_margin="2dp">
                            <TextView
                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Landmark :"

                                android:textSize="16sp" />
                            <TextView
                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"

                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/landmarkName"
                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AdverSize LTD"

                                android:textSize="16sp" />


                        </TableRow>

                        <TableRow
                            android:gravity="center"
                            android:layout_margin="2dp">
                            <TextView

                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Cost"

                                android:textSize="16sp" />
                            <TextView

                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"

                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/mediaCost"
                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="mediaCost"

                                android:textSize="16sp" />

                        </TableRow>
                        <TableRow
                            android:gravity="center"
                            android:layout_margin="2dp">
                            <TextView

                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size"

                                android:textSize="16sp" />
                            <TextView

                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"

                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/mediaSize"
                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="mediaSize"

                                android:textSize="16sp" />


                        </TableRow>

                    </TableLayout>

                    <TableLayout
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:padding="2dp"
                            android:gravity="center"
                            android:layout_margin="2dp">
                            <TextView
                                android:layout_weight="1"
                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="March"

                                android:textSize="16sp" />
                            <TextView
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="April"

                                android:textSize="16sp" />

                            <TextView
                                android:textAlignment="viewEnd"
                             android:layout_weight="1"
                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="May"

                                android:textSize="16sp"
                                android:gravity="end" />


                        </TableRow>



                    </TableLayout>




                    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        app:rcProgress="40"
                        app:rcSecondaryProgress="0"
                        app:rcMax="100"
                        app:rcRadius="2dp"
                        app:rcBackgroundPadding="1dp"
                        app:rcReverse="false"
                        app:rcProgressColor="#039900"
                        app:rcSecondaryProgressColor="#13B6FF"
                        app:rcBackgroundColor="#e2e2e2" />
                    <TableLayout
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:padding="2dp"
                            android:gravity="center"
                            android:layout_margin="2dp">
                            <TextView
                                android:layout_weight="1"
                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date of booking"

                                android:textSize="16sp" />

                            <TextView
                                android:textAlignment="viewEnd"
                                android:layout_weight="1"
                                android:textColor="@color/d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="End Date"

                                android:textSize="16sp"
                                android:gravity="end" />


                        </TableRow>



                    </TableLayout>

</LinearLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>





    </RelativeLayout>

</LinearLayout>
