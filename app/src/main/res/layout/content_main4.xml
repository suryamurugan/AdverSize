<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c4c4c4"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ads.in.adversize.adversize.AdverSize"
    tools:showIn="@layout/app_bar_main4">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pattern"
                />

            <ImageButton
                android:id="@+id/mediaImg"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-60dp"
                android:background="@drawable/profile_circular_border_imageview"
                android:elevation="5dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user" />


            <android.support.v7.widget.CardView
                android:layout_margin="5dp"
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_below="@+id/header_cover_image"

                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:elevation="4dp"
                    android:paddingBottom="10dp">


                    <ImageView
                        android:id="@+id/add_friend"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_toLeftOf="@+id/drop_down_option_menu"
                        android:src="@drawable/ic_add_image" />

                    <ImageView
                        android:id="@+id/drop_down_option_menu"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                       android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_user_profile" />

                    <TextView

                        android:id="@+id/user_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="55dp"
                        android:text="Sharath Patil"
                        android:textColor="@color/d"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                 <LinearLayout
                     android:layout_below="@+id/user_profile_name"

                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical">

                     <TableLayout
                         android:paddingTop="10dp"
                         android:paddingLeft="10dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">
                         <TableRow
                             android:gravity="center"
                             android:layout_margin="2dp">
                             <ImageView
                                 android:layout_gravity="center"
                                 android:src="@drawable/ic_001_buildings"/>
                             <TextView
                                 android:paddingLeft="10dp"
                                 android:id="@+id/Company"
                                 android:textColor="@color/d"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="AdverSize LTD"

                                 android:textSize="16sp" />


                         </TableRow>

                         <TableRow
                             android:gravity="center"
                             android:layout_margin="2dp">
                             <ImageView
                                 android:layout_gravity="center"
                                 android:src="@drawable/ic_004_map"/>
                             <TextView
                                 android:paddingLeft="10dp"
                                 android:id="@+id/city"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_below="@+id/user_profile_short_bio"
                                 android:layout_centerHorizontal="true"
                                 android:layout_marginTop="3dp"
                                 android:text="Mysore"
                                 android:textColor="@color/d"
                                 android:textSize="16sp" />



                         </TableRow>

                         <TableRow
                             android:gravity="center"
                             android:layout_margin="2dp">
                             <ImageView
                                 android:layout_gravity="center"
                                 android:src="@drawable/ic_005_email"/>
                             <TextView
                                 android:id="@+id/Email"
                                 android:paddingLeft="10dp"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_marginTop="3dp"
                                 android:text="sharath@adversize.in"
                                 android:textColor="@color/d"
                                 android:textSize="16sp" />


                         </TableRow>

                         <TableRow


                             android:gravity="center"
                             android:layout_margin="2dp">
                             <ImageView
                                 android:layout_gravity="center"
                                 android:src="@drawable/ic_003_http"/>

                             <TextView
                                 android:paddingLeft="10dp"
                                 android:id="@+id/website"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_below="@+id/user_profile_short_bio"
                                 android:layout_centerHorizontal="true"
                                 android:layout_marginTop="3dp"
                                 android:text="https://adversize.in"
                                 android:textColor="@color/d"
                                 android:textSize="16sp" />

                         </TableRow>


                     </TableLayout>







                 </LinearLayout>

                </RelativeLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_below="@+id/profile_layout"
                android:layout_margin="5dp"
                android:id="@+id/m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Media"
                    android:textSize="30dp"/>
            </android.support.v7.widget.CardView>






            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m"

                android:padding="2dp"
                android:orientation="vertical">



                <android.support.v7.widget.RecyclerView
                    android:layout_margin="1dp"

                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
