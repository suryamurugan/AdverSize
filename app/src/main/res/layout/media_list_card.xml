        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="?attr/selectableItemBackgroundBorderless"

                android:scaleType="centerCrop" />


<LinearLayout
    android:background="#ffffff"
    android:layout_weight="1"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TableLayout
        android:paddingLeft="10dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:fontFamily="@font/cabin"
                android:id="@+id/landmarktitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:text="Media Name"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <LinearLayout
                android:orientation="horizontal">
                <TextView android:text=" :  "
                    android:fontFamily="@font/cabin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/cabin"
                    android:id="@+id/landmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:text="Media Name" android:textAppearance="@style/TextAppearance.AppCompat" />


            </LinearLayout>


        </TableRow>
        <TableRow>
            <TextView
                android:fontFamily="@font/cabin"
                android:id="@+id/mediasizetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:text="Size"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <LinearLayout
                android:orientation="horizontal">
                <TextView android:text=" :  "
                    android:fontFamily="@font/cabin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="@font/cabin"
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp"
                    android:text="size" android:textAppearance="@style/TextAppearance.AppCompat" />



            </LinearLayout>



        </TableRow>
        <TableRow>
            <TextView
                android:fontFamily="@font/cabin"
                android:id="@+id/ava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:text="Availability"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat" />
           <LinearLayout
               android:orientation="horizontal">
               <TextView android:text=" :   "
                   android:fontFamily="@font/cabin"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <Switch
                   android:id="@+id/avswitch"
                   android:theme="@style/Switch"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>

        </TableRow>

    </TableLayout>


</LinearLayout>


        </LinearLayout>
        
        
    </android.support.v7.widget.CardView>

</LinearLayout>